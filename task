#include <iostream>
#include <fstream>

using namespace std;

struct Triangle
{
	int a;
	int b;
	int c;
	double thickness;
};

const int triangle_size = sizeof(Triangle);

int main()
{
	setlocale(0, "");

	int n = 0;
	Triangle triangle;

	cout << "Введите N: ";
	cin >> n;

	ifstream triangles_file;
	triangles_file.open("triangle.bin", iostream::binary);
	triangles_file.seekg(n * triangle_size);
	triangles_file.read(reinterpret_cast<char*>(&triangle), triangle_size);
	triangles_file.close();
	
	cout << "a: " << triangle.a << "|b: " << triangle.b << "|c: " << triangle.c << "|thickness: " << triangle.thickness;
}

